<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%m%n"/>
      </layout>
    </appender>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender,log4net">
      <param name="File" value="root.log"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="5"/>
      <param name="MaximumFileSize" value="5MB"/>
      <param name="RollingStyle" value="Size"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n"/>
      </layout>
    </appender>
    <root>
      <priority value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </root>
  </log4net>
  <appSettings>
    <!-- 
    Required. The certificate and key to use for the web socket server. The client needs to
    trust this certificate or it will reject the connection attempt.
    -->
    <add key="WebSocketCertificatePath" value="localhost.pfx" />
    <!--
    Optional. The password for the web socket server certificate file. Leave blank if no
    password has been set.
    -->
    <add key="WebSocketCertificatePassword" value="" />
    <!--
    Required. The certificate and key file that will be used to negotiate the DTLS connection
    with WebRtc clients. Can be the same or different to the web socket certificate.
    -->
    <add key="DtlsCertificatePath" value="localhost.pem" />
    <add key="DtlsKeyPath" value="localhost_key.pem" />
    <!-- 
     Optional. If set then the same RTP sessions sent to WebRtc clients will also be sent here.
     - PCMU audio to the base port number,
     - Audio RTCP sender reports to base port + 1,
     - VP8 video to base port number + 2,
     - Video RTCP sender report to base port number + 2.
     
     Example: <add key="RawRtpBaseEndPoint" value="192.168.11.50:4040" /> 
    -->
    <add key="RawRtpBaseEndPoint" value="192.168.11.50:4040" />
    <!--
    Required. The media file containing the audio and video to stream to WebRtc clients.
    Ideally the file should be an mp4 container with a single audio and video stream. Different
    container types and combinations of streams have not been extensively tested.
    -->
    <add key="MediaFilePath" value="max_intro.mp4"/>
  </appSettings>
</configuration>
